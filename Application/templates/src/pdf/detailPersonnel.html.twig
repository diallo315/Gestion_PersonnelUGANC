{% load static %}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="{% static 'assets/css/w3.css' %}">
    <title>Document</title>
    <style> 
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }

        .container {
            max-width: 600px;
            margin: 10px auto;
            padding: 10px;
            background-color: #fff;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .person-details {
            margin-top: 10px;
        }

        .label {
            font-weight: bold;
        }

        .value {
            margin-left: 10px;
        }
    </style>
</head>
<body>
    <div class="containerdetailsPersonnel">
        
    
    <div class="container">
        <header class="content">
            <div class="w3-left">
                <img class="left" width="40%" height="50%" src="{% static 'assets/images/GAMAL.jpeg' %}" alt="Logo Gauche">
            </div>
            <div class="w3-center" style="text-align:center;">
            <h1 class="title">REPUBLIQUE DE GUINEE <br><span class="subtitle"> <span style="color:red;">Travail </span>-<span style="color:yellow;"> Justice</span>-<span style="color:green;"> Solidarité</span> </span></h1>
            </div>
            <div class="w3-right">
                <img width="40%" height="50%" src="{% static 'assets/images/logoCI.jpeg' %}" alt="Logo Droite"/>
            </div>
            
        </header>
        <h1 style="text-align:center;">Détails de M/Mme {{personnel.nom |upper }} {{personnel.prenom |upper }}</h1>
        <div class="person-details">
            <div class="detail">
                <span class="label">Matricule :</span>
                <span class="value">{{personnel.matricule}}</span>
            </div>
            <div class="detail">
                <span class="label">Nom :</span>
                <span class="value">{{personnel.nom}}</span>
            </div>
            <div class="detail">
                <span class="label">Prénom :</span>
                <span class="value">{{personnel.prenom}}</span>
            </div>
            <div class="detail">
                <span class="label">Sexe :</span>
                <span class="value">{{personnel.sexe}}</span>
            </div>
            <div class="detail">
                <span class="label">Hiérarchie :</span>
                <span class="value">{{personnel.hierarchie}}</span>
            </div>
            <div class="detail">
                <span class="label">Fonction :</span>
                <span class="value">{{personnel.fonction}}</span>
            </div>
            <div class="detail">
                <span class="label">Spécialité :</span>
                <span class="value">{{personnel.specialite}}</span>
            </div>
            <div class="detail">
                <span class="label">N° Affectation :</span>
                <span class="value">{{personnel.no_acte_affectation}}</span>
            </div>
            <div class="detail">
                <span class="label">Grade :</span>
                <span class="value">{{personnel.grade}}</span>
            </div>
            <div class="detail">
                <span class="label">Diplôme :</span>
                <span class="value">{{personnel.diplome}}</span>
            </div>
            <div class="detail">
                <span class="label">Date de Naissance :</span>
                <span class="value">{{personnel.dateNaissance}}</span>
            </div>
            <div class="detail">
                <span class="label">Date d'Enregistrement :</span>
                <span class="value">{{personnel.date_enregistrement}}</span>
            </div>
            <div class="detail">
                <span class="label">Date d'affectation :</span>
                <span class="value">{{personnel.date_affectation}}</span>
            </div>
            <div class="detail">
                <span class="label">Statut :</span>
                <span class="value">{{personnel.statut}}</span>
            </div>
            <div class="detail">
                <span class="label">Catégorie :</span>
                <span class="value">{{personnel.categorie.nomcategorie}}</span>
            </div>
            <div class="detail">
                <span class="label">Téléphone :</span>
                <span class="value">{{personnel.telephone}}</span>
            </div>
        </div>
    </div>
    </div>
</body>
</html>
